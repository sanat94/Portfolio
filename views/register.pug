doctype html
html(lang='en')
  head
    title Personal Portfolio
    meta(charset='utf-8')
    meta(name='keywords', content='Sana Tafleen, portfolio, ULL, student')
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='https://afeld.github.io/emoji-css/emoji.css')
  body(class="register-page", data-spy='scroll', style='padding-top:50px')
  .container
    nav.navbar.navbar.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(style="font-size:25px; color:black") PORTFOLIO WEBSITE
        form.navbar-form.navbar-right
          .form-group
            input.form-control(type='text', placeholder='Search')
          button.btn.btn-default(type='submit')
            span.glyphicon.glyphicon-search
        #navbar.collapse.navbar-collapse
            .navigation
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/')
                  span.glyphicon.glyphicon-home(style="font-size:25px; color:black")
                    |  HOME
    h1 Register
    form(method='POST', action = '/users/register')
        #form-group 
            label Name:
            input.form-control(name='name', type='text', placeholder='Enter Name', required='')
        #form-group 
            label Email:
            input.form-control(name='email', type='text', placeholder='Enter Email',  required='')
        #form-group 
            label Username:
            input.form-control(name='username', type='text', placeholder='Enter username',  required='')
        #form-group 
            label Password:
            input.form-control(name='password', type='password', placeholder='Enter Password', required='')
        #form-group 
            label Confirm:
            input.form-control(name='password2', type='password', placeholder='Repeat Password',required='')
        br
        input(type='checkbox', checked='checked')
        |  Remember me
        p
          | By creating an account you agree to our 
          a(href='#') Terms & Privacy
          | .
        .clearfix
          button.cancelbtn(type='button') Cancel
          button.signupbtn(type='submit') Sign Up
    
        
        